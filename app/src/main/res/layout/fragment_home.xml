<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bdlm.yytx.module.home.HomeFragment">

    <com.bdlm.yytx.common.view.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftVisibility="false"
        app:title="@string/home_title" />

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:background="@mipmap/banner_sy"
        android:layout_height="@dimen/banner_height" />

    <LinearLayout
        style="@style/style_common_view"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亿游"
            android:textColor="@color/color_text_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawable_paddind"
            android:layout_marginRight="@dimen/drawable_paddind"
            android:background="@mipmap/gonggao"
            android:padding="@dimen/drawable_paddind"
            android:text="公告"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_gonggao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawable_paddind"
            android:text="亿游出境高峰期1500元/人"
            android:textColor="@color/color_text_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_cash_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/quan"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_cash_coupon" />

        <TextView
            android:id="@+id/tv_scenic_spot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/jingqu"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_scenic_spot" />

        <TextView
            android:id="@+id/tv_tourist_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/lvyouyongpin"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_tourist_goods" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_chi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/chi"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_eat" />

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/zhu"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_live" />

        <TextView
            android:id="@+id/tv_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wan"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_play" />
        <TextView
            android:id="@+id/tv_travel_agency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/lvxingshe"
            android:drawablePadding="@dimen/drawable_paddind"
            android:gravity="center"
            android:text="@string/home_travel_agency" />
    </LinearLayout>
</LinearLayout>
