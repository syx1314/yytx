<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/base_bg">

    <ImageView
        android:id="@+id/iv_scenic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/banner_sy" />

    <TextView
        android:id="@+id/tv_scenic_sort_name"
        style="@style/style_common_tv"
        android:layout_toRightOf="@id/iv_scenic"
        android:text="老虎滩"
        android:textSize="@dimen/sp_header"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_scenic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_scenic_sort_name"
        android:layout_toRightOf="@id/iv_scenic"
        android:paddingLeft="@dimen/spacing_medium"
        android:text="老虎滩1111111111111"
        android:textSize="@dimen/text_main" />

    <TextView
        android:id="@+id/tv_people_num_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_toRightOf="@id/iv_scenic"
        android:background="@mipmap/juxing_fx"
        android:padding="@dimen/drawable_paddind"
        android:text="游玩人数"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_people_num"
        style="@style/style_common_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_toRightOf="@id/tv_people_num_ic"
        android:padding="@dimen/drawable_paddind"
        android:text="1992人"
        android:textSize="@dimen/text_main" />

</RelativeLayout>